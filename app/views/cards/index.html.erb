<% 
require 'faraday'
require 'faraday/net_http'
Faraday.default_adapter = :net_http
%>
<div id="wrapper" style="margin-top: 2em;">
<div class="container" id="main-page">
<% $x = 0 %>
    <% @cards.each do |card| %>
<%response = Faraday.get("http://yugiohprices.com/api/price_for_print_tag/#{card.print_tag}")%>
<% data = JSON.parse(response.body) %>
    <% if($x % 3 == 0 || $x == 0) %>
    </div>
    <div class="row">
    <% end %>
    <div class="col-sm-4">
<div class="card mb-4" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-6">
    <%split = data["data"]['name'].split
    splitc = split.join('_')
    %>
      <%= image_tag("http://yugiohprices.com/api/card_image/#{splitc}", class:"img-fluid rounded-start") %>
    </div>
    <div class="col-md-6">
      <div class="card-body">
        <h5 class="card-title"><%= data["data"]['name'] %></h5>
        <p class="card-text">
        Print tag: <%= card.print_tag %>
        <br>
        Set name: <%= card.set %>
        </p>
      </div>
    </div>
  </div>
        <div class="card-footer text-muted">
    <%= time_ago_in_words(card.created_at) %> ago
</div>
</div>

    </div>
      <% $x = $x + 1 %>
    <% end %>
    <% if($x % 3 == 0 || $x == 0) %>
    </div>
    <% $x = 0 %>
    <% end %>
</div>

<br>
<%= link_to 'New Card', new_card_path %>
</div>